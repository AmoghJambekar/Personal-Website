---
import { getCollection } from 'astro:content';
import Navbar from '../../components/Navbar.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const sortedPosts = [...posts].sort((a, b) => 
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );
  
  return sortedPosts.map((post, index) => ({
    params: { slug: post.slug },
    props: { 
      post,
      prevPost: index > 0 ? sortedPosts[index - 1] : null,
      nextPost: index < sortedPosts.length - 1 ? sortedPosts[index + 1] : null
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.data.title} | Blog | Amogh Jambekar</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <style>
      :root {
        --text-primary: #111827;
        --text-secondary: #4B5563;
        --text-tertiary: #6B7280;
        --bg-primary: #FFFFFF;
        --bg-secondary: #F3F4F6;
        --border-color: #E5E7EB;
        --link-color: #2563EB;
        --nav-bg: rgba(255, 255, 255, 0.8);
      }

      html.dark {
        --text-primary: #F9FAFB;
        --text-secondary: #D1D5DB;
        --text-tertiary: #9CA3AF;
        --bg-primary: #111827;
        --bg-secondary: #1F2937;
        --border-color: #374151;
        --link-color: #60A5FA;
        --nav-bg: rgba(17, 24, 39, 0.8);
      }

      * {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }

      html {
        height: 100%;
        scroll-behavior: smooth;
      }

      body {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      .container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 130px 24px 80px;
      }

      .blog-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 10px;
      }

      .title-section {
        flex: 1;
        margin-right: 24px;
        padding-top: 4px;
      }

      h1 {
        font-size: 48px;
        font-weight: 700;
        letter-spacing: -0.025em;
        line-height: 1.1;
        margin: 0;
        color: var(--text-primary);
      }

      .meta {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        gap: 8px;
        padding-top: 0;
      }

      .post-date {
        display: inline-flex;
        align-items: center;
        gap: 4px;
        color: var(--text-tertiary);
        font-size: 12px;
        padding: 4px 10px;
        background: var(--bg-secondary);
        border-radius: 14px;
        white-space: nowrap;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 4px;
        justify-content: flex-end;
      }

      .tag {
        padding: 3px 10px;
        border-radius: 14px;
        font-size: 11px;
        font-weight: 500;
        color: var(--bg-primary);
      }

      .tag:nth-child(6n + 1) { background-color: #EF4444; }
      .tag:nth-child(6n + 2) { background-color: #F59E0B; }
      .tag:nth-child(6n + 3) { background-color: #10B981; }
      .tag:nth-child(6n + 4) { background-color: #3B82F6; }
      .tag:nth-child(6n + 5) { background-color: #8B5CF6; }
      .tag:nth-child(6n + 6) { background-color: #EC4899; }

      html.dark .tag:nth-child(6n + 1) { background-color: rgba(239, 68, 68, 0.2); color: #FCA5A5; }
      html.dark .tag:nth-child(6n + 2) { background-color: rgba(245, 158, 11, 0.2); color: #FCD34D; }
      html.dark .tag:nth-child(6n + 3) { background-color: rgba(16, 185, 129, 0.2); color: #6EE7B7; }
      html.dark .tag:nth-child(6n + 4) { background-color: rgba(59, 130, 246, 0.2); color: #93C5FD; }
      html.dark .tag:nth-child(6n + 5) { background-color: rgba(139, 92, 246, 0.2); color: #C4B5FD; }
      html.dark .tag:nth-child(6n + 6) { background-color: rgba(236, 72, 153, 0.2); color: #F9A8D4; }

      .content {
        color: var(--text-secondary);
        line-height: 1.75;
        font-size: 16px;
      }

      .content h2 {
        font-size: 32px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 48px 0 24px;
        letter-spacing: -0.025em;
      }

      .content h3 {
        font-size: 24px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 32px 0 16px;
      }

      .content p {
        margin-bottom: 24px;
      }

      .content a {
        color: var(--link-color);
        text-decoration: underline;
        text-underline-offset: 2px;
      }

      .content ul, .content ol {
        margin: 24px 0;
        padding-left: 24px;
      }

      .content li {
        margin-bottom: 12px;
      }

      .content pre {
        background: var(--bg-secondary);
        padding: 20px;
        border-radius: 12px;
        overflow-x: auto;
        margin: 24px 0;
        border: 1px solid var(--border-color);
      }

      .content code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 14px;
      }

      .content p code {
        background: var(--bg-secondary);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 14px;
      }

      .content img {
        max-width: 100%;
        height: auto;
        border-radius: 12px;
        margin: 32px 0;
      }

      .content blockquote {
        border-left: 4px solid var(--link-color);
        padding: 16px 24px;
        margin: 32px 0;
        background: var(--bg-secondary);
        border-radius: 8px;
        font-style: italic;
      }

      .content blockquote p:last-child {
        margin-bottom: 0;
      }

      .post-navigation {
        display: flex;
        justify-content: space-between;
        gap: 24px;
        margin-top: 64px;
        padding-top: 32px;
        border-top: 1px solid var(--border-color);
      }

      .nav-link {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
        color: var(--text-tertiary);
        padding: 12px;
        border-radius: 12px;
        background: var(--bg-secondary);
        transition: all 0.2s ease;
        flex: 1;
      }

      .nav-link.prev {
        padding-right: 16px;
      }

      .nav-link.next {
        padding-left: 16px;
        text-align: right;
        justify-content: flex-end;
      }

      .nav-link:hover {
        color: var(--text-primary);
        background: var(--bg-secondary-hover);
        transform: translateY(-2px);
      }

      .nav-text {
        display: flex;
        flex-direction: column;
        gap: 4px;
      }

      .nav-text .label {
        font-size: 12px;
        text-transform: uppercase;
        letter-spacing: 0.05em;
      }

      .nav-text .title {
        font-size: 14px;
        font-weight: 500;
      }

      @media (max-width: 768px) {
        .container {
          padding: 65px 20px 60px;
        }
        
        .blog-header {
          flex-direction: column;
          gap: 12px;
        }

        .meta {
          align-items: flex-start;
          padding-top: 0;
        }

        .tags {
          justify-content: flex-start;
        }

        .title-section {
          margin-right: 0;
          padding-top: 0;
        }

        .post-navigation {
          flex-direction: column;
        }

        .nav-link.next {
          text-align: left;
          justify-content: flex-start;
        }
      }
    </style>
  </head>
  <body>
    <Navbar />
    <div class="container">
      <a href="/blog" class="back-link" aria-label="Back to blog">
        <i data-feather="book-open"></i>
      </a>
      
      <div class="blog-header">
        <div class="title-section">
          <h1>{post.data.title}</h1>
        </div>
        <div class="meta">
          <time datetime={post.data.date.toISOString()} class="post-date">
            <i data-feather="calendar"></i>
            {new Date(post.data.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <div class="tags">
            {post.data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>
      </div>

      <div class="content">
        <Content />
      </div>

      <div class="post-navigation">
        {prevPost && (
          <a href={`/blog/${prevPost.slug}`} class="nav-link prev">
            <i data-feather="arrow-left"></i>
            <span class="nav-text">
              <span class="label">Previous</span>
              <span class="title">{prevPost.data.title}</span>
            </span>
          </a>
        )}
        {nextPost && (
          <a href={`/blog/${nextPost.slug}`} class="nav-link next">
            <span class="nav-text">
              <span class="label">Next</span>
              <span class="title">{nextPost.data.title}</span>
            </span>
            <i data-feather="arrow-right"></i>
          </a>
        )}
      </div>
    </div>

    <script>
      // Initialize Feather Icons
      document.addEventListener('DOMContentLoaded', () => {
        // @ts-ignore
        feather?.replace();
      });
    </script>
  </body>
</html>
