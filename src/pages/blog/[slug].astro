---
import { getCollection } from 'astro:content';
import Navbar from '../../components/Navbar.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await post.render();
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{post.data.title} | Blog | Amogh Jambekar</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons/dist/feather.min.js"></script>
    <style>
      :root {
        --text-primary: #111827;
        --text-secondary: #4B5563;
        --text-tertiary: #6B7280;
        --bg-primary: #FFFFFF;
        --bg-secondary: #F3F4F6;
        --border-color: #E5E7EB;
        --link-color: #2563EB;
        --nav-bg: rgba(255, 255, 255, 0.8);
      }

      html.dark {
        --text-primary: #F9FAFB;
        --text-secondary: #D1D5DB;
        --text-tertiary: #9CA3AF;
        --bg-primary: #111827;
        --bg-secondary: #1F2937;
        --border-color: #374151;
        --link-color: #60A5FA;
        --nav-bg: rgba(17, 24, 39, 0.8);
      }

      * {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }

      html {
        height: 100%;
        scroll-behavior: smooth;
      }

      body {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background-color: var(--bg-primary);
        color: var(--text-primary);
        transition: background-color 0.3s ease, color 0.3s ease;
      }

      .container {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 120px 24px;
      }

      .back-link {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        color: var(--text-tertiary);
        text-decoration: none;
        font-size: 14px;
        margin-bottom: 48px;
        padding: 8px 16px;
        background: var(--bg-secondary);
        border-radius: 20px;
        transition: all 0.2s ease;
      }

      .back-link:hover {
        color: var(--text-primary);
        transform: translateX(-4px);
      }

      h1 {
        font-size: 48px;
        font-weight: 700;
        letter-spacing: -0.025em;
        line-height: 1.1;
        margin-bottom: 24px;
        color: var(--text-primary);
      }

      .meta {
        display: flex;
        align-items: center;
        gap: 16px;
        margin-bottom: 48px;
      }

      .post-date {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        color: var(--text-tertiary);
        font-size: 14px;
        padding: 6px 12px;
        background: var(--bg-secondary);
        border-radius: 16px;
      }

      .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 6px;
      }

      .tag {
        padding: 4px 12px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 500;
        color: var(--bg-primary);
      }

      .tag:nth-child(6n + 1) { background-color: #EF4444; }
      .tag:nth-child(6n + 2) { background-color: #F59E0B; }
      .tag:nth-child(6n + 3) { background-color: #10B981; }
      .tag:nth-child(6n + 4) { background-color: #3B82F6; }
      .tag:nth-child(6n + 5) { background-color: #8B5CF6; }
      .tag:nth-child(6n + 6) { background-color: #EC4899; }

      html.dark .tag:nth-child(6n + 1) { background-color: rgba(239, 68, 68, 0.2); color: #FCA5A5; }
      html.dark .tag:nth-child(6n + 2) { background-color: rgba(245, 158, 11, 0.2); color: #FCD34D; }
      html.dark .tag:nth-child(6n + 3) { background-color: rgba(16, 185, 129, 0.2); color: #6EE7B7; }
      html.dark .tag:nth-child(6n + 4) { background-color: rgba(59, 130, 246, 0.2); color: #93C5FD; }
      html.dark .tag:nth-child(6n + 5) { background-color: rgba(139, 92, 246, 0.2); color: #C4B5FD; }
      html.dark .tag:nth-child(6n + 6) { background-color: rgba(236, 72, 153, 0.2); color: #F9A8D4; }

      .content {
        color: var(--text-secondary);
        line-height: 1.75;
        font-size: 16px;
      }

      .content h2 {
        font-size: 32px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 48px 0 24px;
        letter-spacing: -0.025em;
      }

      .content h3 {
        font-size: 24px;
        font-weight: 600;
        color: var(--text-primary);
        margin: 32px 0 16px;
      }

      .content p {
        margin-bottom: 24px;
      }

      .content a {
        color: var(--link-color);
        text-decoration: underline;
        text-underline-offset: 2px;
      }

      .content ul, .content ol {
        margin: 24px 0;
        padding-left: 24px;
      }

      .content li {
        margin-bottom: 12px;
      }

      .content pre {
        background: var(--bg-secondary);
        padding: 20px;
        border-radius: 12px;
        overflow-x: auto;
        margin: 24px 0;
        border: 1px solid var(--border-color);
      }

      .content code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        font-size: 14px;
      }

      .content p code {
        background: var(--bg-secondary);
        padding: 2px 6px;
        border-radius: 4px;
        font-size: 14px;
      }

      .content img {
        max-width: 100%;
        height: auto;
        border-radius: 12px;
        margin: 32px 0;
      }

      .content blockquote {
        border-left: 4px solid var(--link-color);
        padding: 16px 24px;
        margin: 32px 0;
        background: var(--bg-secondary);
        border-radius: 8px;
        font-style: italic;
      }

      .content blockquote p:last-child {
        margin-bottom: 0;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <a href="/blog" class="back-link">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="m15 18-6-6 6-6"/>
        </svg>
        Back to Blog
      </a>

      <article>
        <h1>{post.data.title}</h1>
        <div class="meta">
          <time datetime={post.data.date} class="post-date">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect width="18" height="18" x="3" y="4" rx="2" ry="2"/>
              <line x1="16" x2="16" y1="2" y2="6"/>
              <line x1="8" x2="8" y1="2" y2="6"/>
              <line x1="3" x2="21" y1="10" y2="10"/>
            </svg>
            {new Date(post.data.date).toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
          <div class="tags">
            {post.data.tags.map(tag => (
              <span class="tag">{tag}</span>
            ))}
          </div>
        </div>

        <div class="content">
          <Content />
        </div>
      </article>
    </div>
    <Navbar />
    <script src="/scripts/theme.js" is:inline></script>
  </body>
</html>
