---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  const sortedPosts = [...posts].sort((a, b) => 
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  );
  
  return sortedPosts.map((post, index) => ({
    params: { slug: post.slug },
    props: { 
      post,
      prevPost: index > 0 ? sortedPosts[index - 1] : null,
      nextPost: index < sortedPosts.length - 1 ? sortedPosts[index + 1] : null
    },
  }));
}

const { post, prevPost, nextPost } = Astro.props;
const { Content } = await post.render();

// Format the post date
const formattedDate = new Date(post.data.date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<Layout title={`${post.data.title} | Blog | Amogh Jambekar`}>
  <div class="container">
    <a href="/blog" class="back-link" aria-label="Back to blog">
      <i data-feather="book-open"></i>
    </a>
    
    <div class="blog-header">
      <div class="title-section">
        <h1>{post.data.title}</h1>
      </div>
      <div class="meta">
        <time datetime={new Date(post.data.date).toISOString()} class="post-date">
          <i data-feather="calendar"></i>
          {formattedDate}
        </time>
        <div class="tags">
          {post.data.tags.map(tag => (
            <span class="tag" data-tag={tag}>{tag}</span>
          ))}
        </div>
      </div>
    </div>

    <div class="content">
      <Content />
    </div>

    <div class="post-navigation">
      {prevPost && (
        <a href={`/blog/${prevPost.slug}`} class="nav-link prev">
          <i data-feather="arrow-left"></i>
          <span class="nav-text">
            <span class="label">Previous</span>
            <span class="title">{prevPost.data.title}</span>
          </span>
        </a>
      )}
      {nextPost && (
        <a href={`/blog/${nextPost.slug}`} class="nav-link next">
          <span class="nav-text">
            <span class="label">Next</span>
            <span class="title">{nextPost.data.title}</span>
          </span>
          <i data-feather="arrow-right"></i>
        </a>
      )}
    </div>
  </div>
</Layout>

<style>
  .container {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    padding: 130px 24px 80px;
    animation: fadeIn 0.3s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .blog-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin: 32px 0 40px;
  }

  .title-section {
    flex: 1;
    margin-right: 24px;
    padding-top: 4px;
  }

  h1 {
    font-size: 48px;
    font-weight: 700;
    letter-spacing: -0.025em;
    line-height: 1.1;
    margin: 0;
    color: var(--text-primary);
  }

  .meta {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 8px;
    padding-top: 0;
  }

  .post-date {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    color: var(--text-tertiary);
    font-size: 12px;
    padding: 4px 10px;
    background: var(--bg-secondary);
    border-radius: 14px;
    white-space: nowrap;
  }

  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    justify-content: flex-end;
  }

  .tag {
    padding: 3px 10px;
    border-radius: 14px;
    font-size: 11px;
    font-weight: 500;
    color: var(--bg-primary);
    background-color: #6B7280; /* Default gray color for unspecified tags */
  }

  /* Specific tag colors */
  .tag[data-tag="personal"] { background-color: #F59E0B; }
  .tag[data-tag="docs"] { background-color: #3B82F6; }
  .tag[data-tag="lessons"] { background-color: #8B5CF6; }
  .tag[data-tag="tech"] { background-color: #10B981; }
  .tag[data-tag="guides"] { background-color: #EAB308; }
  .tag[data-tag="updates"] { background-color: #EC4899; }
  .tag[data-tag="daily"] { background-color: #06B6D4; }
  .tag[data-tag="thoughts"] { background-color: #9D4EDD; }

  /* Dark mode colors */
  html.dark .tag { 
    background-color: rgba(107, 114, 128, 0.2); 
    color: #9CA3AF; 
  }
  
  html.dark .tag[data-tag="personal"] { background-color: rgba(245, 158, 11, 0.2); color: #FBBF24; }
  html.dark .tag[data-tag="docs"] { background-color: rgba(59, 130, 246, 0.2); color: #93C5FD; }
  html.dark .tag[data-tag="lessons"] { background-color: rgba(139, 92, 246, 0.2); color: #C4B5FD; }
  html.dark .tag[data-tag="tech"] { background-color: rgba(16, 185, 129, 0.2); color: #6EE7B7; }
  html.dark .tag[data-tag="guides"] { background-color: rgba(234, 179, 8, 0.2); color: #FDE047; }
  html.dark .tag[data-tag="updates"] { background-color: rgba(236, 72, 153, 0.2); color: #F9A8D4; }
  html.dark .tag[data-tag="daily"] { background-color: rgba(6, 182, 212, 0.2); color: #67E8F9; }
  html.dark .tag[data-tag="thoughts"] { background-color: rgba(157, 78, 221, 0.2); color: #D8B4FE; }

  .content {
    color: var(--text-secondary);
    line-height: 1.75;
    font-size: 16px;
    margin-top: 48px;
  }

  .content p {
    margin-bottom: 32px;
    font-size: 17px;
    line-height: 1.8;
  }

  .content h2 {
    font-size: 32px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 64px 0 32px;
    letter-spacing: -0.025em;
  }

  .content h3 {
    font-size: 24px;
    font-weight: 600;
    color: var(--text-primary);
    margin: 48px 0 24px;
  }

  .content ul, .content ol {
    margin: 32px 0;
    padding-left: 24px;
  }

  .content li {
    margin-bottom: 16px;
    font-size: 17px;
    line-height: 1.7;
  }

  .content li:last-child {
    margin-bottom: 32px;
  }

  .content a {
    color: var(--link-color);
    text-decoration: underline;
    text-underline-offset: 2px;
    transition: color 0.2s ease;
    font-weight: 600;
  }

  .content a:hover {
    color: var(--text-primary);
  }

  html.dark .content a {
    color: #fff;
  }

  html.dark .content a:hover {
    color: #ccc;
  }

  /* Add more breathing room between sections */
  .content > * + * {
    margin-top: 2em;
  }

  /* Style horizontal rules if used */
  .content hr {
    margin: 64px 0;
    border: none;
    border-top: 1px solid var(--border-color);
  }

  /* NYT Games Grid Layout */
  .content h2 + p:has(pre:first-child) {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    gap: 20px;
    margin: 32px 0;
    padding: 24px;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border-color);
    overflow-x: auto;
    white-space: nowrap;
  }

  .content h2 + p:has(pre:first-child) pre {
    display: inline-block;
    margin: 0;
    padding: 16px;
    background: var(--bg-primary);
    font-size: 14px;
    line-height: 1.4;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    flex: 1;
    min-width: 0;
  }

  @media (max-width: 768px) {
    .container {
      padding: 100px 20px 60px;
    }
    
    .blog-header {
      flex-direction: column;
      gap: 16px;
      margin: 32px 0;
    }

    .meta {
      align-items: flex-start;
      padding-top: 0;
    }

    .tags {
      justify-content: flex-start;
    }

    .title-section {
      margin-right: 0;
      padding-top: 0;
    }

    .post-navigation {
      flex-direction: column;
    }

    .nav-link.next {
      text-align: left;
      justify-content: flex-start;
    }

    .content {
      font-size: 16px;
    }

    .content p,
    .content li {
      font-size: 16px;
      line-height: 1.7;
    }

    .content h2 {
      font-size: 28px;
      margin: 48px 0 24px;
    }

    .content h3 {
      font-size: 22px;
      margin: 32px 0 16px;
    }

    .content hr {
      margin: 48px 0;
    }

    .content h2 + p:has(pre:first-child) {
      flex-direction: column;
      padding: 16px;
      gap: 16px;
      white-space: normal;
    }

    .content h2 + p:has(pre:first-child) pre {
      width: 100%;
    }
  }

  /* Make blockquotes stand out more */
  .content blockquote {
    margin: 48px 0;
    padding: 24px 32px;
    background: var(--bg-secondary);
    border-radius: 12px;
    border-left: 4px solid var(--link-color);
  }

  .content blockquote p:last-child {
    margin-bottom: 0;
  }

  /* Improve code block readability */
  .content pre {
    background: var(--bg-secondary);
    padding: 24px;
    border-radius: 12px;
    overflow-x: auto;
    margin: 32px 0;
    border: 1px solid var(--border-color);
    font-size: 15px;
    line-height: 1.6;
  }

  .content code {
    font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
    font-size: 15px;
  }

  .content p code {
    background: var(--bg-secondary);
    padding: 3px 8px;
    border-radius: 4px;
    font-size: 15px;
    color: var(--text-primary);
  }

  /* Improve image display */
  .content img {
    max-width: 100%;
    height: auto;
    border-radius: 12px;
    margin: 40px 0;
    display: block;
  }

  .post-navigation {
    display: flex;
    justify-content: space-between;
    gap: 24px;
    margin-top: 64px;
    padding-top: 32px;
    border-top: 1px solid var(--border-color);
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: var(--text-tertiary);
    padding: 12px;
    border-radius: 12px;
    background: var(--bg-secondary);
    transition: all 0.2s ease;
    flex: 1;
  }

  .nav-link.prev {
    padding-right: 16px;
  }

  .nav-link.next {
    padding-left: 16px;
    text-align: right;
    justify-content: flex-end;
  }

  .nav-link:hover {
    color: var(--text-primary);
    transform: translateY(-2px);
  }

  .nav-text {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .nav-text .label {
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-text .title {
    font-size: 14px;
    font-weight: 500;
  }
</style>
