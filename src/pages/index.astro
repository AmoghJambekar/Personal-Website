---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Section from '../components/Section.astro';
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Your Name</title>
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100 transition-colors duration-300">
    <Navbar />

    <main class="max-w-4xl mx-auto px-4 py-12 space-y-20">
      <Section id="bio" title="Bio">
        <p>Write your bio here — brief intro, background, interests.</p>
      </Section>

      <Section id="projects" title="Projects">
        <ul class="list-disc pl-5 space-y-2">
          <li>Project 1 — short description</li>
          <li>Project 2 — short description</li>
          <li>Project 3 — short description</li>
        </ul>
      </Section>

      <Section id="experience" title="Experience">
        <ul class="list-disc pl-5 space-y-2">
          <li>Job/Role 1 — details, dates</li>
          <li>Job/Role 2 — details, dates</li>
        </ul>
      </Section>

      <Section id="education" title="Education">
        <ul class="list-disc pl-5 space-y-2">
          <li>School/Degree — dates, relevant info</li>
        </ul>
      </Section>
    </main>
  </body>
</html>
