    </nav>

    <script>
      declare const feather: {
        replace: () => void;
      };

      // Initialize Feather Icons
      feather.replace();

      // Toggle content visibility
      function toggleContent(element: HTMLElement) {
        const content = element.querySelector('.item-content') as HTMLElement;
        content.classList.toggle('active');
      }

      // Toggle theme
      function toggleTheme() {
        const themeToggle = document.querySelector('.theme-toggle i') as HTMLElement;
        const isDark = document.documentElement.classList.toggle('dark');
        themeToggle.setAttribute('data-feather', isDark ? 'sun' : 'moon');
        feather.replace();
      }
    </script>
