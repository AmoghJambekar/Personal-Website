---
import Navbar from '../components/Navbar.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amogh Jambekar</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }
      
      html {
        height: 100%;
        scroll-behavior: smooth;
      }
      
      body {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 3.5rem 1.5rem 5rem;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
      }

      .container {
        width: 100%;
        max-width: 36rem;
        margin-top: 5rem;
        text-align: left;
      }
      
      h1 {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 0.75rem;
        color: #1a1a1a;
        text-align: left;
      }
      
      h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 1.5rem 0 1rem;
        color: #1a1a1a;
        text-align: left;
      }
      
      h3 {
        font-size: 1.125rem;
        font-weight: 500;
        color: #1a1a1a;
        display: inline;
      }
      
      p {
        color: #6b7280;
        line-height: 1.6;
        margin-bottom: 1rem;
        font-size: 0.95rem;
      }
      
      .subtitle {
        font-size: 1.25rem;
        color: #4b5563;
        margin-bottom: 2rem;
      }
      
      .intro {
        font-size: 1rem;
        margin-bottom: 2rem;
        color: #6b7280;
      }
      
      .section {
        margin-bottom: 2rem;
        width: 100%;
        text-align: left;
      }
      
      .item {
        margin-bottom: 1rem;
        border: 1px solid #eaeaea;
        border-radius: 8px;
        overflow: hidden;
        width: 100%;
      }
      
      .item-header {
        padding: 1rem;
        background: #fff;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
      }
      
      .item-header:hover {
        background: #f9f9f9;
      }
      
      .meta-container {
        display: flex;
        align-items: baseline;
        gap: 0.5rem;
        justify-content: flex-start;
        flex: 1;
      }
      
      .meta {
        color: #6b7280;
        font-size: 0.95rem;
      }
      
      .date {
        color: #6b7280;
        margin-left: auto;
        font-size: 0.95rem;
      }
      
      .arrow {
        transition: transform 0.2s ease;
        margin-left: 1rem;
      }
      
      .item-content {
        padding: 0 1rem;
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s ease-out;
        background: #f9f9f9;
        width: 100%;
        text-align: left;
      }
      
      .item-content.active {
        padding: 1rem;
        max-height: 500px;
      }
      
      .tags {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
        margin-top: 0.75rem;
        justify-content: flex-end;
      }
      
      .tag {
        background: #f5f5f5;
        color: #6b7280;
        padding: 0.25rem 0.75rem;
        border-radius: 9999px;
        font-size: 0.875rem;
      }
      
      .footer {
        margin-top: 3rem;
        padding-top: 2rem;
        border-top: 1px solid #eaeaea;
        width: 100%;
        text-align: left;
      }
      
      .nav {
        position: fixed;
        bottom: 1rem;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        padding: 0.75rem 1.5rem;
        border-radius: 9999px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        display: flex;
        gap: 2rem;
        z-index: 1000;
      }
      
      .nav a {
        color: #4a4a4a;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: color 0.2s ease;
      }
      
      .nav a:hover {
        color: #0066cc;
      }
      
      a {
        color: #0066cc;
        text-decoration: none;
      }
      
      a:hover {
        text-decoration: underline;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Amogh Jambekar</h1>
      <p class="subtitle">Building & shipping everyday</p>
      
      <p class="intro">
        I'm a [Your Year] student at [Your University], studying [Your Major]. 
        [Write a brief introduction about yourself, your current role/interests, and what you're passionate about.]
      </p>
      
      <div class="section">
        <h2>Experience</h2>
        <div class="item">
          <div class="item-header" onclick="toggleContent(this)">
            <div class="meta-container">
              <h3>Company Name</h3>
              <span class="meta">â€¢</span>
              <span class="meta">Position</span>
              <span class="date">Date Range</span>
            </div>
            <i data-feather="chevron-down" class="arrow"></i>
          </div>
          <div class="item-content">
            <p>Description of your role and achievements.</p>
          </div>
        </div>
      </div>
      
      <div class="section">
        <h2>Projects</h2>
        <div class="item">
          <div class="item-header" onclick="toggleContent(this)">
            <div class="meta-container">
              <h3>Project Name</h3>
              <span class="date">Date</span>
            </div>
            <i data-feather="chevron-down" class="arrow"></i>
          </div>
          <div class="item-content">
            <p>Project description and your role in it.</p>
            <div class="tags">
              <span class="tag">Technology 1</span>
              <span class="tag">Technology 2</span>
            </div>
          </div>
        </div>
      </div>
      
      <div class="section">
        <h2>Education</h2>
        <div class="item">
          <div class="item-header" onclick="toggleContent(this)">
            <div class="meta-container">
              <h3>University Name</h3>
              <span class="date">Year Range</span>
            </div>
            <i data-feather="chevron-down" class="arrow"></i>
          </div>
          <div class="item-content">
            <p>Degree Type</p>
          </div>
        </div>
      </div>
      
      <div class="footer">
        <p>Reach out to me at <a href="mailto:your.email@example.com">your.email@example.com</a></p>
      </div>
    </div>

    <nav class="nav">
      <a href="https://linkedin.com/in/yourusername" target="_blank" rel="noopener noreferrer">
        <i data-feather="linkedin"></i>
      </a>
      <a href="https://twitter.com/yourusername" target="_blank" rel="noopener noreferrer">
        <i data-feather="twitter"></i>
      </a>
      <a href="https://github.com/yourusername" target="_blank" rel="noopener noreferrer">
        <i data-feather="github"></i>
      </a>
    </nav>

    <script>
      declare const feather: any;
      
      // Initialize Feather Icons
      feather.replace();

      // Toggle content visibility
      function toggleContent(header: HTMLElement) {
        const content = header.nextElementSibling as HTMLElement;
        const arrow = header.querySelector('.arrow') as HTMLElement;
        
        content.classList.toggle('active');
        arrow.style.transform = content.classList.contains('active') ? 'rotate(180deg)' : 'rotate(0)';
      }
    </script>
  </body>
</html>
