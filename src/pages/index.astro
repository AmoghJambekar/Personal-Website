---
import Navbar from '../components/Navbar.astro';
import Section from '../components/Section.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Amogh Jambekar</title>
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body class="bg-white text-gray-800 font-sans scroll-smooth">
    <Navbar />

    <main class="flex flex-col gap-32">
      <section id="bio" class="min-h-screen flex flex-col justify-center items-end pr-[10vw]">
        <h2 class="text-xl font-medium tracking-wide mb-4">BIO</h2>
        <p class="max-w-md text-sm text-gray-600 leading-relaxed">Your bio content here.</p>
      </section>

      <section id="projects" class="min-h-screen flex flex-col justify-center items-end pr-[10vw]">
        <h2 class="text-xl font-medium tracking-wide mb-4">PROJECTS</h2>
        <p class="max-w-md text-sm text-gray-600 leading-relaxed">Your projects here.</p>
      </section>

      <section id="experience" class="min-h-screen flex flex-col justify-center items-end pr-[10vw]">
        <h2 class="text-xl font-medium tracking-wide mb-4">EXPERIENCE</h2>
        <p class="max-w-md text-sm text-gray-600 leading-relaxed">Your experience here.</p>
      </section>

      <section id="education" class="min-h-screen flex flex-col justify-center items-end pr-[10vw]">
        <h2 class="text-xl font-medium tracking-wide mb-4">EDUCATION</h2>
        <p class="max-w-md text-sm text-gray-600 leading-relaxed">Your education here.</p>
      </section>
    </main>
  </body>
</html>
