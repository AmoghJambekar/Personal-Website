import Navbar from '../components/Navbar.astro';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Amogh Jambekar</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
      :root {
        --text-primary: #111827;
        --text-secondary: #4B5563;
        --text-tertiary: #6B7280;
        --bg-primary: #FFFFFF;
        --bg-secondary: #F3F4F6;
        --border-color: #E5E7EB;
        --link-color: #2563EB;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      }
      
      html {
        height: 100%;
        scroll-behavior: smooth;
        background-color: var(--bg-primary);
      }
      
      body {
        width: 100%;
        max-width: 100%;
        margin: 0;
        padding: 0;
        min-height: 100vh;
        color: var(--text-primary);
      }

      .container {
        width: 100%;
        max-width: 640px;
        margin: 0 auto;
        padding: 120px 24px 120px;
      }
      
      h1 {
        font-size: 48px;
        font-weight: 700;
        letter-spacing: -0.025em;
        line-height: 1.1;
        margin-bottom: 12px;
      }
      
      h2 {
        font-size: 24px;
        font-weight: 600;
        margin: 32px 0 16px;
        letter-spacing: -0.025em;
      }
      
      h3 {
        font-size: 16px;
        font-weight: 600;
        color: var(--text-primary);
        display: inline;
      }
      
      p {
        color: var(--text-secondary);
        line-height: 1.75;
        font-size: 16px;
        margin-bottom: 24px;
      }
      
      .subtitle {
        font-size: 20px;
        color: var(--text-secondary);
        margin-bottom: 12px;
        font-weight: 500;
      }
      
      .intro {
        color: var(--text-secondary);
        line-height: 1.75;
        margin-bottom: 48px;
        font-size: 14px;
      }

      .section {
        margin-bottom: 32px;
      }
      
      .item {
        margin-bottom: 12px;
        cursor: pointer;
        transition: all 0.2s ease;
        padding: 12px 16px;
        border-radius: 8px;
        position: relative;
      }
      
      .item:hover {
        background: var(--bg-secondary);
      }

      .item:hover .arrow-icon {
        opacity: 1;
        transform: translateX(0);
      }
      
      .arrow-icon {
        position: absolute;
        right: 16px;
        top: 50%;
        transform: translateY(-50%) translateX(-10px);
        opacity: 0;
        transition: all 0.2s ease;
        color: var(--text-tertiary);
      }
      
      .item-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
      }
      
      .meta-container {
        display: flex;
        align-items: center;
        gap: 12px;
      }
      
      .company-icon {
        width: 20px;
        height: 20px;
        background: var(--bg-secondary);
        border-radius: 4px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        font-size: 12px;
      }
      
      .meta {
        color: var(--text-tertiary);
        font-size: 14px;
      }
      
      .date {
        color: var(--text-tertiary);
        font-size: 14px;
        margin-left: auto;
        margin-right: 32px;
      }
      
      .item-content {
        padding: 0;
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s ease-out;
        opacity: 0;
      }
      
      .item-content.active {
        padding: 12px 0 0;
        max-height: 500px;
        opacity: 1;
      }

      .item-content p {
        margin-bottom: 8px;
        font-size: 14px;
      }

      .item-content ul {
        list-style: none;
        margin: 0;
        padding: 0;
        color: var(--text-secondary);
        font-size: 14px;
      }

      .item-content li {
        margin-bottom: 4px;
      }
      
      .project-item {
        margin-bottom: 16px;
        border: 1px solid var(--border-color);
        border-radius: 12px;
        overflow: hidden;
      }
      
      .project-item .item-header {
        padding: 16px;
        background: var(--bg-primary);
        cursor: pointer;
      }
      
      .project-item:hover {
        border-color: var(--text-tertiary);
      }

      .project-item .item-content {
        padding: 0 16px;
        max-height: 0;
        overflow: hidden;
        transition: all 0.3s ease-out;
        background: var(--bg-secondary);
      }
      
      .project-item .item-content.active {
        padding: 16px;
        max-height: 500px;
      }

      .tags {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
        margin-top: 16px;
      }
      
      .tag {
        background: var(--bg-primary);
        color: var(--text-tertiary);
        padding: 4px 12px;
        border-radius: 9999px;
        font-size: 14px;
        border: 1px solid var(--border-color);
      }
      
      .footer {
        margin-top: 64px;
        color: var(--text-secondary);
        font-size: 14px;
      }
      
      .nav {
        position: fixed;
        bottom: 24px;
        left: 50%;
        transform: translateX(-50%);
        background: rgba(255, 255, 255, 0.8);
        backdrop-filter: blur(12px);
        padding: 12px 20px;
        border-radius: 9999px;
        display: flex;
        align-items: center;
        gap: 20px;
        z-index: 1000;
        border: 1px solid var(--border-color);
      }

      .nav-divider {
        width: 1px;
        height: 20px;
        background: var(--border-color);
      }
      
      .nav a {
        color: var(--text-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        padding: 8px;
        border-radius: 8px;
      }
      
      .nav a:hover {
        transform: scale(1.15);
      }

      .nav a:hover ~ a {
        transform: translateX(4px);
      }
      
      .theme-toggle {
        padding: 8px;
        border-radius: 8px;
        color: var(--text-primary);
        cursor: pointer;
        transition: all 0.2s ease;
      }

      .theme-toggle:hover {
        color: var(--text-primary);
        transform: scale(1.15);
      }
      
      a {
        color: var(--link-color);
        text-decoration: none;
      }
      
      a:hover {
        text-decoration: underline;
      }

      @media (max-width: 768px) {
        .container {
          padding: 80px 20px 120px;
        }
        
        h1 {
          font-size: 36px;
        }
        
        .subtitle {
          font-size: 18px;
        }

        .nav {
          padding: 10px 16px;
          gap: 16px;
        }
      }
    </style>
  </head>
